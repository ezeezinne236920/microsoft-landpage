@media (max-width: 884px) {
  .showcase {
    background: none;
    color: #262626;
  }
  .showcase img {
    width: 100%;
  }
  .showcase img {
    width: 1084px;
    height: 481px;
  }
  .showcase .content .no-br {
    font-size: 23px;
  }
  .showcase .content .br {
    font-size: 0.00000001px;
  }
  .showcase img {
    display: inline-block;
    width: 100%;
  }
  .main-nav li {
    font-size: 10px;
  }
  /* .main-nav .main-menu {
    display: flex;
    flex-direction: column;
    font-size: 10px;
  } */

  .main-nav ul.right-menu li:first-child {
    position: absolute;
    top: 260px;
    left: 0;
    /* background: #f2f2f2; */
    width: 50%;
    height: 100%;
    border-right: #ccc 1px solid;
    opacity: 0.9;
    padding: 30px;
    font-size: 14px;
    /* border-bottom: #ccc solid 1px; */
    transform: translateX(-500px);
    transition: transform 0.5s ease-in-out;
  }
  .main-nav ul.main-menu li {
    padding: 10px;
    border-bottom: #ccc solid 1px;
    font-size: 14px;
  }
  .main-nav ul.main-menu {
    flex: 1;
    margin-left: 20px;
  }
  .main-nav ul.main-menu {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    background: #f2f2f2;
    width: 50%;
    height: 100%;
    border-right: #ccc 1px solid;
    opacity: 0.9;
    padding: 30px;
    transform: translateX(-500px);
    transition: transform 0.5s ease-in-out;
  }
  .main-nav ul.main-menu :hover {
    border-bottom: 1px solid #000;
  }
  .main-nav ul.main-menu.show {
    transform: translateX(-20px);
  }
  .main-nav img {
    position: absolute;
    top: 20px;
    left: 240px;
  }
  .menu-btn {
    cursor: pointer;
    display: block;
    position: absolute;
    top: 20px;
    bottom: 0px;
    left: 20px;
    z-index: 2;
  }
  .menu-btn:hover {
    opacity: 0.5;
  }
}
@media (max-width: 825px) {
  .showcase img {
    margin: auto;
    width: 99%;
    transform: translate(-3rem);
    display: none;
    /* z-index: -0; */
  }
  .showcase {
    background: url("/imegiz/Highlight-Hero-Windows11-GlobalLaunch_VP4-1399x600\ \(1\).jpeg")
      no-repeat 100% 76%;
  }
  .home-cards {
    grid-template-columns: repeat(2, 1fr);
    /* grid-column-gap: 30px; */
  }
  /* .home-cards img {
    height: 150px;
    width: 360px;
    margin-bottom: 15px;
  } */
  .home-cards img {
    width: 90%;
    height: 50%;
  }
  .links-inner {
    grid-template-columns: repeat(3, 1fr);
  }
  .footer-inner {
    padding: 1rem 3rem;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  .footer-inner ul {
    display: flex;
  }
  .footer-inner a {
    margin-right: 7px;
  }
  .follow {
    margin-top: 2rem;
  }
}
@media (max-width: 697) {
  .home-cards a {
    display: none;
  }
}
@media (max-width: 657px) {
  .showcase {
    max-width: 650px;
  }

  .main-nav img {
    position: absolute;
    top: 20px;
    left: 140px;
  }
  .showcase h3 {
    font-size: 2rem;
  }
  .showcase p {
    font-size: 14px;
  }
  .follow {
    margin-top: 4rem;
  }
}

@media (max-width: 529px) {
  .showcase img {
    margin: auto;
    width: 99%;
    transform: translate(-3rem);
    display: none;
    /* z-index: -0; */
  }
  .showcase {
    background: url("/imegiz/Highlight-Hero-Windows11-GlobalLaunch_VP4-1399x600\ \(1\).jpeg")
      no-repeat 50% 50%;
  }
  .home-cards {
    grid-template-columns: 1fr;
    width: 91%;
    margin: auto 3rem;
    margin-top: 7rem;
    /* background: black; */
  }
  .cardcontent {
    align-items: center;
    text-align: center;
    flex-wrap: wrap;
    width: 70%;
  }
  .home-cards img {
    width: 100%;
    height: 70%;
    align-items: center;
    margin-top: 7rem;
  }
  .home-cards p {
    width: 70%;
    font-size: 14px;
  }
  .homecards.see {
    display: none;
    margin-bottom: 7rem;
  }
  .showcase h3 {
    font-size: 1rem;
  }
  .showcase p {
    font-size: 10px;
    width: 70%;
  }
  .home-cards h3 {
    font-size: 14px;
  }
  .home-cards a {
    font-size: 12px;
  }
  .home-cards p {
    font-size: 12px;
  }
  .follow {
    margin: 2rem;
  }
  .links-inner {
    grid-template-columns: 1fr;
    font-size: 9px;
  }
  .main-nav img {
    position: absolute;
    top: 20px;
    left: 100px;
    width: 80px;
  }

  .main-btn {
    width: 20px;
  }
  .follow {
    margin: 4rem;
  }
}
@media (max-width: 460) {
  .homecards h3 {
    display: none;
  }
}

@media (max-width: 470px) {
  .home-cards img:first-child {
    margin-top: 0;
    padding-top: 0;
  }
  .home-cards img:nth-child(2) {
    transform: translateY(-2rem);
    /* height: 50%; */
  }
  .home-cards h3 {
    text-transform: capitalize;
  }
  .home-cards img {
    width: 92%;
    height: 60%;
    align-items: center;
    /* margin-top: 5rem; */
    margin: auto;
  }
  .home-cards a {
    margin: 2rem 0;
    /* padding:8px; */
    padding: 8px;
  }
  .main-nav img {
    width: 30%;
  }
  .showcase img {
    min-height: 50vh;
    width: 100%;
    /* max-width: 1200px; */
  }
  .showcase h3 {
    font-size: 12px;
    font-weight: 350;
  }
  .showcase img {
    width: 100%;
  }
  .showcase p {
    font-size: 2px;
    line-height: 1;
  }
  .main-nav img {
    position: absolute;
    top: 20px;
    left: 10px;
  }
  .main-btn {
    width: 20px;
  }
  .homecardz p {
    display: none;
  }
  .footer-inner {
    font-size: 8px;
  }
  .footer-inner {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-gap: 10px;
  }
  .footer-inner .footer-icon {
    width: 3px;
  }
  .footer-inner ul {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-gap: 10px;
    padding: 3px;
    font-size: 10px;
  }
  .footer-inner ul li {
    padding: 6px;
  }
  .xbox .content p {
    display: none;
  }
  .xbox .content h2 {
    padding-bottom: 48px;
  }
  .follow {
    margin: 2rem;
  }
}
@media (max-width: 370) {
  .main-nav ul .right-menu {
    margin-right: 3px;
  }
  .home-cards a {
    margin-bottom: 1rem;
  }
  .home-cards img {
    width: 60%;
    height: 40%;
  }
} ;
